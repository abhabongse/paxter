@!##{
    apple = 1 > 2
    orange = 1 < 2
    test = lambda: v < 5
    values = range(10)
}##\
@for[v,values]{\
    @v, @{v + 1}, @{v + 2} |@if[test]{yes}@if[test,false]{no}|
}\
@if[apple]{Apple.}@if[apple,true]{Apple is True.}@if[apple,false]{Apple is False.}
@if[orange]{Orange.}@if[orange,true]{Orange is True.}@if[orange,false]{Orange is False.}
